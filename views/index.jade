extend layout

block content
    .row
        .col-sm-6
            form.form(action="/tasks", method="POST")
                .form-group
                    .input-group
                        input.form-control(type="text", name="name", required)
                        span.input-group-btn
                            button.btn.btn-primary(type="submit") Create task
    h2 To do:
    if justDeleted
        .alert.alert-danger Task deleted
    if tasks.length > 1
        p
            form(action="/alldone", method="POST")
                button.btn.btn-success(type="submit")
                    i.glyphicon.glyphicon-ok 
                    |  Mark all as completed
    if !tasks.length
        p No tasks
    ul.list-group
        each task in tasks
            if !task.completed
                li.list-group-item
                    a.btn.btn-danger.pull-right.js-delete(href="/tasks?id="+task.id, title="Delete task")
                        i.glyphicon.glyphicon-trash
                    a.btn.btn-success.pull-left.js-complete(href="/tasks?id="+task.id, title="Mark as completed")
                        i.glyphicon.glyphicon-ok
                    //- form(action="/delete", method="POST")
                    //-     input(type="hidden", name="task" value=task.id)
                    //-     button.btn.btn-danger.pull-right(title="Delete")
                    //-         i.glyphicon.glyphicon-trash
                    //- form(action="/done", method="POST")
                    //-     input(type="hidden", name="task" value=task.id)
                    //-     button.btn.btn-success.pull-left(type="submit", title="Mark as completed")
                    //-         i.glyphicon.glyphicon-ok
                    .task-desc
                        | #{task.name}
                        em= task.createdDate  
                    